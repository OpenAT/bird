    <!-- BIRD THEME -->
    <template id="email_theme_bird"
              name="bird Theme">&lt;!DOCTYPE html PUBLIC &quot;-//W3C//DTD XHTML 1.0 Strict//EN&quot; &quot;http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd&quot;&gt;
        <html t-att-lang="lang and lang.replace('_', '-')"
              t-att-data-website-id="website and website.id or None"
              t-att-data-editable="'1' if editable else None"
              t-att-data-translatable="'1' if translatable else None"
              t-att-data-view-xmlid="xmlid if editable else None"
              t-att-data-main-object="repr(main_object) if editable else None"
              t-att-data-oe-company-name="res_company.name if editable else None"
              class="ckediting_disabled">

            <!-- TEMPLATE SETTINGS -->
            <!-- ================= -->
            <t t-set="load_theme_framework" t-value="True"/>
            <t t-set="skipp_theme_framework_responsive_css" t-value="False"/>

            <!-- ================= -->

            <head>
                <!-- COMMON CSS-ASSETS AND <head> TAGS -->
                <t t-call="fso_website_email.theme_head_common"/>
                
                <!-- THEME bird CSS-ASSETS IN EDIT MODE ONLY -->
                <t t-if="email_editor_mode">
                    <t t-call-assets="fso_website_email_bird.email_theme_bird_assets_editmode" t-js="false"/>
                </t>
                
                <!-- THEME bird CSS-ASSETS -->
                <t t-call-assets="fso_website_email_bird.email_theme_bird_assets" t-js="false"/>
                
                <meta name="viewport" content="width=device-width"/>
            </head>


            <body class="ckediting_disabled">
                <!-- WRAP COMMON ASSETS AND BODY TAGS AROUND THEME 'bird' -->
                <t t-call="fso_website_email.theme_body_common">

                    <!-- ============ -->
                    <!-- THEME 'bird' -->
                    <!-- ============ -->
                    <center>
                        <table id="bodyTable" class="ckediting_disabled" border="0" cellpadding="0" cellspacing="0" height="100%" width="100%">

                            <!-- OPEN IN BROWSER -->
                            <tr>
                                <td id='open_in_browser' class="headerCell ckediting_disabled" align="center">
                                    Wenn diese Nachricht nicht richtig angezeigt wird, verwenden Sie bitte die
                                    <![CDATA[
                                    <a id="view-email-in-browser"
                                       href="%open_browser%" target="_blank">
                                         Online-Version
                                    </a>
                                    ]]>
                                </td>
                            </tr>
                            
                            <!-- BIRD HEADER -->
                            <tr>
                                <td id='bird_header' class="headerCell ckediting_disabled" align="center">
    
                                    <t t-call="fso_website_email_bird.email_theme_bird_header"/>
                                    
                                </td>
                            </tr>

                            <!-- MAIN -->
                            <tr>
                                <!-- bodyCell width: 100% padding: 0 left and right  -->
                                <td id="bodyCell" class="ckediting_disabled" align="center" valign="top">
                                    
                                    <!-- emailBody width: 600 px padding: 0  margin: 0 -->
                                    <table id="emailBody" class="ckediting_disabled" border="0" cellpadding="0" cellspacing="0">
                                        <tr>
                                            <td class="ckediting_disabled" align="center" valign="top">

                                                <!-- CONTENT ('html_body' field of email.template) -->
                                                <t t-call="fso_website_email.content"/>

                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- FOOTER -->
                            <tr>
                                <td id='bird_footer' align="center" class="footerCell ckediting_disabled">
                                    
                                    <t t-call="fso_website_email_bird.email_theme_bird_footer"/>
                                    
                                </td>
                            </tr>

                        </table>
                    </center>

                </t>
                
                <!-- THEME bird JAVA SCRIPT ASSETS IN EDIT MODE ONLY -->
                <t t-if="email_editor_mode">
                    <t t-call-assets="fso_website_email_bird.email_theme_bird_assets_editmode" t-css="false"/>
                </t>
                
                <!-- THEME bird JAVA SCRIPT ASSETS -->
                <t t-call-assets="fso_website_email_bird.email_theme_bird_assets" t-css="false"/>
            </body>

        </html>
    </template>

    <!-- Enable the boolean field 'fso_email_template' for this theme to show it at the 'fso/email/select' page -->
    <record id="fso_website_email_bird.email_theme_bird" model="ir.ui.view">
        <field name="fso_email_template" eval="True"/>
    </record>

</data>
